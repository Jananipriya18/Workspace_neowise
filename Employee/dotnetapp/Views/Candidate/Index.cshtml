@model dotnetapp.Models.Candidate 

<h2>Tasks Count by Candidate</h2>

@foreach (var candidate in ViewBag.TasksByCandidate)
{
    <h3>@candidate.CandidateName</h3>
    <p>Total Tasks: @candidate.TotalTasks</p>
    <p>Pending Tasks: @candidate.PendingTasks</p>
    <p>Ongoing Tasks: @candidate.OngoingTasks</p>
    <p>Completed Tasks: @candidate.CompletedTasks</p>
    <hr>
}
