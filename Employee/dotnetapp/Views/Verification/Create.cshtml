@model dotnetapp.Models.VerificationTask

<h2>Create Verification Task</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        <label for="CandidateID">Candidate ID:</label>
        <select class="form-control" asp-for="CandidateID">
            @for (int i = 1; i <= 5; i++)
            {
                <option value="@i">Candidate @i</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="VerificationDetails">Verification Details:</label>
        @Html.TextAreaFor(model => model.VerificationDetails, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.VerificationDetails, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="Status">Status:</label>
        <select class="form-control" asp-for="Status" asp-items='new SelectList(new[] { "Pending", "Ongoing", "Completed" })'>
            <option>Please select</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
} 
