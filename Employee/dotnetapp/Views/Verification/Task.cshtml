@model VerificationTask

<h2>New Verification Task for @ViewBag.CandidateName</h2>

@using (Html.BeginForm("Create", "Verification"))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.HiddenFor(model => model.CandidateID)

        <label for="VerificationDetails">Verification Details:</label>
        @Html.TextAreaFor(model => model.VerificationDetails, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.VerificationDetails, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="Status">Status:</label>
        @Html.DropDownListFor(model => model.Status, new SelectList(new[] { "Pending", "Ongoing", "Completed" }), new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
    </div>

    <!-- Add more fields as needed -->

    <button type="submit" class="btn btn-primary">Submit</button>
}
