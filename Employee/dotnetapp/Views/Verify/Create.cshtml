@model dotnetapp.Models.VerificationTask


<h2>Create Verification Task</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.CandidateID)

    <div class="form-group">
        <label for="VerificationDetails">Verification Details:</label>
        @Html.TextAreaFor(model => model.VerificationDetails, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.VerificationDetails, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="Status">Status:</label>
        @Html.TextBoxFor(model => model.Status, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
}
