@{
    ViewData["Title"] = "Expense Index";
}

<h2>Expense Index</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Description</th>
            <th>Amount</th>
            <th>Date</th>
            <th>Category ID</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var expense in ViewBag.Expenses)
        {
            <tr>
                <td>@expense.Id</td>
                <td>@expense.Description</td>
                <td>@expense.Amount</td>
                <td>@expense.Date</td>
                <td>@expense.CategoryId</td>
            </tr>
        }
    </tbody>
</table>
