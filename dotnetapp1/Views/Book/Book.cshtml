@model List<Book>

<center>
    <h1>List of Books</h1>
</center>

@if (Model.Count == 0)
{
    <p>No books available at the moment. Please check back later.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Book ID</th>
                <th>Name</th>
                <th>Author</th>
                <th>Language</th>
                <th>Type</th>
                <th>Title</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Id</td>
                    <td>@book.Name</td>
                    <td>@book.Author</td>
                    <td>@book.Language</td>
                    <td>@book.Type</td>
                    <td>@book.Title</td>
                </tr>
            }
        </tbody>
    </table>
}
