@model List<TaskItem>

<!DOCTYPE html>
<html>
<head>
    <title>Task Items</title>
</head>
<body>
    <h1>Task Items</h1>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <strong>Description:</strong> @item.Description <br />
                <strong>Is Completed:</strong> @(item.IsCompleted ? "Yes" : "No") <br />
                <a href="@Url.Action("Edit", new { id = item.Id })">Edit</a> |
                <a href="@Url.Action("Details", new { id = item.Id })">Details</a> |
                <a href="@Url.Action("Delete", new { id = item.Id })">Delete</a>
            </li>
            <hr />
        }
    </ul>
    <a asp-action="Create" asp-controller="TaskItem">Create New Task Item</a>
    <br />
    <a asp-action="Index" asp-controller="TaskList">Back to Task List</a>
</body>
</html>
