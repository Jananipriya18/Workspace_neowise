@model dotnetapp.Models.TaskItem

<h1>Create Task Item</h1>

<form asp-action="Create" asp-controller="TaskItem" asp-route-listId="@ViewBag.TaskListId">
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsCompleted"></label>
        <input asp-for="IsCompleted" class="form-control" />
        <span asp-validation-for="IsCompleted" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
