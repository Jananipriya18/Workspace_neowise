@model dotnetapp.Models.Vehicle

<h1>Vehicle Details</h1>

<div>
    <h4>Model: @Model.Model</h4>
    <p>Manufacture Date: @Model.Date.ToShortDateString()</p>
    <p>Color: @Model.Color</p>
</div>

<!-- Display bookings associated with this vehicle -->
<h2>Bookings</h2>

@if (Model.Bookings != null && Model.Bookings.Any())
{
    <table>
        <thead>
            <tr>
                <th>Booking ID</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model.Bookings)
            {
                <tr>
                    <td>@booking.BookingId</td>
                    <td>@booking.StartDate.ToShortDateString()</td>
                    <td>@booking.EndDate.ToShortDateString()</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@booking.BookingId">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@booking.BookingId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No bookings for this vehicle.</p>
}
