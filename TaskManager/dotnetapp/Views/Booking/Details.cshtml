@model dotnetapp.Models.Booking

<h1>Booking Details</h1>

<div>
    <h4>Booking ID: @Model.BookingId</h4>
    <h4>Vehicle ID: @Model.VehicleId</h4>
    <h4>Start Date: @Model.StartDate.ToShortDateString()</h4>
    <h4>End Date: @Model.EndDate.ToShortDateString()</h4>
    <!-- Add more details as needed -->
</div>

<div>
    <!-- Buttons for Edit and Delete -->
    <a asp-action="Edit" asp-route-id="@Model.BookingId">Edit</a>
    <form asp-action="Delete" asp-route-id="@Model.BookingId" method="post">
        <button type="submit">Delete</button>
    </form>
    <a asp-action="Index">Back to List</a>
</div>
