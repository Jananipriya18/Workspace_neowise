@model dotnetapp.Models.Vehicle

<h1>Vehicle Details</h1>
<table class="table">
    <thead>
        <tr>
            <th>Booking ID</th>
            <th>Vehicle ID</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.BookingId</td>
                <td>@booking.VehicleId</td>
                <td>@booking.StartDate.ToShortDateString()</td>
                <td>@booking.EndDate.ToShortDateString()</td>
                <td>
                    <a asp-controller="Vehicle" asp-action="Details" asp-route-id="@booking.VehicleId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
